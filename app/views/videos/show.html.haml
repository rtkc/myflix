%article.video
  .container
    .row
      .video_large_cover.col-sm-7.col-sm-offset-1
        = image_tag @video.large_cover_url
      .video_info.col-sm-3
        %header
          %h3= @video.title
          %span Rating: 4.5/5.0
        %p= @video.description
        .actions
          %a.btn.btn-primary(href="") Watch Now
          = link_to "+ My Queue", video_queue_items_path(@video), method: 'post', class: "btn btn-default"

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for [@video, @review] do |f|
        %fieldset
          .row
            .col-sm-3
              = f.form_group do
                = f.select :rating, [[], [5, "5 stars"], [4, "4 stars"], [3, "3 stars"], [2, "2 stars"], [1, "1 stars"]], { label: "Rate this video" }, { class: "form-control", control_col: "col-sm-3"}
          .row
            .col-sm-8
              = f.form_group do
                = f.text_area :review, label: "Write Review", control_col: "col-sm-8", rows: "6"
        %fieldset.form-group.actions.clearfix
          = f.submit "Submit"
          = link_to "Cancel", @video
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.creator.full_name}</a>
              .col-sm-8
                %p= review.review
