%article.video_category
  %header
    - @categories.each do |category|
      %h3= link_to(category.name, category) # same as: link_to("#{video.category.name}", category_path(video.category))
      .videos.row
        - category.recent_videos.each do |video|
          .video.col-sm-2
            = link_to video do
              = image_tag video.small_cover_url