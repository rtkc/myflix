%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
          - @queue_items.each do |queue_item|
            = bootstrap_form_for [queue_item] do |f|
              %tr
                %td
                  = f.text_field :order
                %td
                  = link_to "#{queue_item.video.title}", video_path(queue_item.video)
                %td
                  = button_to "Play", nil, class: "btn btn-default"
            
            = bootstrap_form_for [queue_item.video] do |f|
              %td
                = f.select :rating, [[], [5, "5 stars"], [4, "4 stars"], [3, "3 stars"], [2, "2 stars"], [1, "1 stars"]], { label: "Rating" }, { class: "form-control"}
              %td
                = link_to "#{queue_item.video.category.name}", video_path(queue_item.video.category.name)
              %td
                = link_to "", method: :post do
                  %i.glyphicon.glyphicon-remove

