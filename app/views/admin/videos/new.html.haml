%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for [:admin, @video], layout: "form-horizontal" do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %br
          %fieldset
            = f.text_field :title
            = f.select :category_id, options_for_video_category
            = f.text_area :description
            = f.file_field :large_cover, label: "Large image", class: 'btn btn-file'
            = f.file_field :small_cover, label: "Small image", class: 'btn btn-file'
            = f.text_field :video_url, label: "Link to a video"
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              = f.submit "Add video"
