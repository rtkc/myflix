%section.register.container
  .row
    .col-sm-10.col-sm-offset-1
      = bootstrap_form_for @user, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-6' do |f|
        %header
          %h1 Register
        %fieldset
          = f.text_field :full_name, label: "Full Name"
          = f.email_field :email, label: "Email Address"
          = f.password_field :password
          = hidden_field_tag :invitation_token, @invitation_token
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key=#{ENV['stripe_publishable_key']} data-image="/img/documentation/checkout/marketplace.png" data-name="MyFlix Sign Up Fee" data-description="$9.99 to sign up the best video service" data-amount="999"></script>
